{
  "name": "beam-collect",
  "private": true,
  "version": "0.1.0",
  "description": "Beam web collect",
  "scripts": {
    "clean": "rm -Rf node_modules",
    "prebuild": "yarn install",
    "build": "yarn run build_native",
    "build_native": "webpack --mode=development",
    "build_web": "node_modules/.bin/sass --embed-source-map index_web.scss:index_prod.css && parcel build --no-content-hash --no-optimize index_web.js",
    "build_debug": "node_modules/.bin/sass --embed-source-map index_debug.scss:index_prod.css && parcel build --no-content-hash --no-optimize index_debug.js",
    "watch": "webpack --watch --mode=development",
    "start": "webpack serve --mode=development",
    "dist": "webpack --mode=production",
    "test": "node --experimental-vm-modules node_modules/.bin/jest --reporters=default --silent --verbose",
    "test:verbose": "node --experimental-vm-modules node_modules/.bin/jest --reporters=default --verbose",
    "test-ci": "node --experimental-vm-modules node_modules/.bin/jest --ci --silent --verbose --reporters=default --reporters=jest-junit --coverage",
    "benchmark-show": "yarn run jest-measure",
    "benchmark-update": "UPDATE_BENCHMARK=true yarn test",
    "lint": "eslint **/*.ts --format gitlab .",
    "lint-fix": "eslint **/*.ts --format gitlab . --fix"
  },
  "targets": {
    "main": {
      "sourceMap": {
        "inline": true,
        "inlineSources": true
      }
    }
  },
  "author": "frontend@beam.co",
  "devDependencies": {
    "@babel/core": "^7.13.10",
    "@babel/plugin-proposal-class-properties": "^7.13.0",
    "@babel/plugin-transform-runtime": "^7.13.10",
    "@babel/preset-env": "^7.13.15",
    "@babel/preset-typescript": "^7.13.0",
    "@babel/runtime-corejs3": "^7.13.10",
    "@types/jest": "^26.0.22",
    "@types/node": "^15.0.1",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.28.4",
    "@typescript-eslint/parser": "^4.28.4",
    "babel-jest": "^26.6.3",
    "css-loader": "^5.2.4",
    "debounce": "^1.2.1",
    "dequal": "^2.0.2",
    "eslint": "^7.31.0",
    "eslint-formatter-gitlab": "^2.2.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "26.6.3",
    "jest-junit": "^12.1.0",
    "jest-measure": "^0.0.14",
    "posthtml-expressions": "^1.7.1",
    "sass": "1.32.8",
    "sass-loader": "^11.0.1",
    "source-map-loader": "^3.0.0",
    "style-loader": "^2.0.0",
    "ts-jest": "^26.5.5",
    "ts-loader": "^9.1.0",
    "typescript": "^4.3.5",
    "uuid": "^8.3.2",
    "webpack": "^5.35.1",
    "webpack-cli": "4.6.0",
    "webpack-dev-server": "^3.11.2"
  },
  "browserslist": [
    "safari 13"
  ],
  "babel": {
    "presets": [
      "@babel/preset-env"
    ],
    "plugins": [
      "@babel/plugin-proposal-class-properties"
    ]
  },
  "jest": {
    "transform": {},
    "moduleNameMapper": {
      "^.+\\.(css|scss)$": "identity-obj-proxy",
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/fileMocks.js"
    }
  }
}
