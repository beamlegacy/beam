{
  "name": "beam-collect",
  "private": true,
  "version": "0.1.0",
  "description": "Beam web collect",
  "main": "index_prod.js",
  "scripts": {
    "clean": "rm -Rf node_modules && rm -Rf .parcel-cache",
    "prebuild": "yarn install && yarn test",
    "build": "yarn run build_native",
    "build_native": "node_modules/.bin/sass --embed-source-map index_native.scss:index_prod.css && parcel build --no-cache --no-content-hash --no-optimize index_native.js",
    "build_web": "node_modules/.bin/sass --embed-source-map index_web.scss:index_prod.css && parcel build --no-cache --no-content-hash --no-optimize index_web.js",
    "build_debug": "node_modules/.bin/sass --embed-source-map index_debug.scss:index_prod.css && parcel build --no-cache --no-content-hash --no-optimize index_debug.js",
    "test": "node --experimental-vm-modules node_modules/.bin/jest"
  },
  "targets": {
    "main": {
      "sourceMap": {
        "inline": true,
        "inlineSources": true
      }
    }
  },
  "author": "frontend@beam.co",
  "devDependencies": {
    "@babel/core": "^7.13.10",
    "@babel/plugin-proposal-class-properties": "^7.13.0",
    "@babel/plugin-transform-runtime": "^7.13.10",
    "@babel/preset-env": "^7.13.15",
    "@babel/preset-typescript": "^7.13.0",
    "@babel/runtime-corejs3": "^7.13.10",
    "@parcel/transformer-sass": "^2.0.0-nightly.641",
    "@parcel/transformer-typescript-tsc": "^2.0.0-alpha.3.1",
    "@parcel/validator-eslint": "^2.0.0-alpha.3",
    "@parcel/validator-typescript": "^2.0.0-beta.2",
    "@types/jest": "^26.0.22",
    "@types/node": "^15.0.1",
    "@types/uuid": "^8.3.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "27.0.0-next.8",
    "parcel": "2.0.0-nightly.643",
    "posthtml-expressions": "^1.7.1",
    "sass": "1.32.8",
    "typescript": "^3.0.0",
    "uuid": "^8.3.2"
  },
  "browserslist": [
    "safari 13"
  ],
  "babel": {
    "presets": [
      "@babel/preset-env"
    ],
    "plugins": [
      "@babel/plugin-proposal-class-properties"
    ]
  },
  "jest": {
    "transform": {},
    "moduleNameMapper": {
      "^.+\\.(css|scss)$": "identity-obj-proxy",
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/fileMocks.js"
    }
  }
}
